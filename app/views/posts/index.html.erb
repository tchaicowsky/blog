<h1>Our Blog, with all its lovely posts</h1>

<!--Post all dem posts-->
<% @posts.each do |post| %>
  <h2><%= link_to post.title, post_path(post.id) %></h2>
  <p><%= post.content %></p>
  <p>
    <%= link_to "Edit", edit_post_path(post.id) %> | 
    <%= link_to "Delete", post_path(post.id), :confirm => "Are you sure?",
                                              :method => :delete %>
  </p>
  
  <hr />
<% end %>

<!--Link to form to create new post-->
<p><%= link_to "New post", new_post_path %></p>